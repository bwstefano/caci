article#dossier.single(ng-hide="hiddenContent")
  .controls
    span.icon.icon-chevron-small-right(ng-click="next()")
    span.icon.icon-chevron-left(ng-click="prev()")
    span.icon.icon-cross(ng-click="close()") 
  section.dossier-content.single-content(tag-external)
    .content
      header.dossier-header
        h1(ng-bind-html="dossier.title")
      .location 
        .icon.icon-map-marker 
        span.mun
          {{dossier.meta.municipio}}
        span &nbsp;-&nbsp;
        span.uf  
          {{dossier.meta.uf}}
      .share
        span Compartilhe:
        a.icon.icon-facebook-square(ng-href="{{facebookSharerURL}}" target="_blank")
        a.icon.icon-twitter(ng-href="{{twitterSharerURL}}" target="_blank")
        a.icon.icon-whatsapp(ng-href="{{whatsappSharerURL}}" target="_blank")
        a.icon.icon-printer(href="javascript:window.print();")
      p.excerpt(ng-show="dossier.excerpt" ng-bind-html="dossier.excerpt")
      p.author por {{dossier.author.name}}
      div(ng-bind-html="dossier.content" fit-vids)

